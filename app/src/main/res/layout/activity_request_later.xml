<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activity.RequestLaterActivity">
    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="订单申请延时"
        titlebar:centerType="textView"
        titlebar:fillStatusBar="true"
        titlebar:leftType="imageButton"
        titlebar:rightText=""
        app:titleBarColor="@color/colorPrimary"
        titlebar:statusBarColor="@color/colorPrimary"
        titlebar:leftImageResource="@mipmap/login_icon_back"
        app:rightTextColor="@color/white"
        app:centerTextColor="@color/white"
        titlebar:rightType="textView"
        titlebar:showBottomLine="false" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/title_bar"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="延时时间"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_15"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/tv1"
            android:background="@color/white"
            >
            <EditText
                android:id="@+id/request_hour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="true"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14"
                android:background="@null"
                android:scrollbars="vertical"
                android:layout_margin="@dimen/margin_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小时"
                android:textSize="@dimen/text_size_12"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/margin_15"
                android:textColor="@color/black"
                />
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_10"
            android:background="@color/back_ground_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="延时原因"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_15"
        />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/tv1"
            android:background="@color/white"
            >
            <EditText
                android:id="@+id/memo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="true"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="8"
                android:hint="点击输入车辆延时原因"
                android:maxLines="10"
                android:textSize="@dimen/text_size_14"
                android:background="@null"
                android:scrollbars="vertical"
                android:layout_margin="@dimen/margin_15"

                />
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_10"
            android:background="@color/back_ground_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附加车辆照片"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_15"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/takePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            app:cardCornerRadius="10dp"
            android:layout_below="@+id/tv"
            android:background="@color/back_ground_gray"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_30"
                android:paddingTop="@dimen/margin_30"
                android:paddingLeft="@dimen/margin_60"
                android:paddingRight="@dimen/margin_60"
                >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dd_icon_photo"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img"
                    android:layout_centerHorizontal="true"
                    android:text="附加照片"
                    android:layout_marginTop="@dimen/margin_15"
                    />
                <ImageView
                    android:id="@+id/photoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
        <Button
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/margin_15"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>